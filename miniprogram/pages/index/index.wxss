.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.title {
  position: absolute;
  top: 60rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #AAAAAA;
  font-weight: 400;
}

.author {
  position: absolute;
  top: 120rpx;
  color: #999;
  font-size: 20rpx;
}

.display {
  display: flex;
  width: 600rpx;
  margin-top: 200rpx;
}

.display-img {
  width: 100%;
  height: 100%;
  border: 2rpx dashed #333;
}

.display-img-noborder {
  width: 100%;
}

.upload-container {
  width: 100%;
}

.upload {
  position: fixed;
  bottom: 0rpx;
  background-color: #3172EE;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 38rpx;
  /* padding-bottom: 38rpx; */
  border-radius: 0;
  padding-bottom: calc(38rpx + env(safe-area-inset-bottom));
}

.upload text {
  color: #fff;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 0 12rpx;
  letter-spacing: 5rpx
}

.upload image {
  width: 50rpx;
  padding: 0 12rpx;
}

.content {
  display: flex;
  flex-direction: column;
}

.tag-container {
  width: 600rpx;
  margin-top: 50rpx;
  padding-bottom: 300rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.tag {
  line-height: 40rpx;
  font-size: 28rpx;
  border: 1px solid #979797;
  padding: 8rpx 14rpx;
  margin: 10rpx 10rpx;
}